{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "generator-star-spacing": [
      "error",
      "after"
    ],
    "block-spacing": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": "error"
  }
}
